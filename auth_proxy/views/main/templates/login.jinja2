{% extends "base.jinja2" %}

{% block header %}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <h1>SMART Portal</h1>

        {% if error %}
        <div class="alert alert-danger">Error: {{ error }}</div>
        {% endif %}

        <form action="/login" method="post">
            <input type="hidden" name="next" value="{{ next | e }}" />
            <div class="form-group">
                <label for="username" class="control-label">Username</label>
                <input type="text" class="form-control" name="username" id="username" value="demo-smart-user">
            </div>
            <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <input type="password" class="form-control" name="password" id="password" value="demo-password">
            </div>
            <div class="form-group">
                <button id="sign-in" type="submit" class="btn btn-default">Sign in</button>
            </div>
        </form>

    </div>
</div>
{% endblock %}
